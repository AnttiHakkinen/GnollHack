<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Disappearing="ContentPage_Disappearing"
             x:Class="GnollHackClient.Pages.Game.GetLinePage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="labelCaption" Text="" FontFamily="Diablo" FontSize="Large" Margin="0,10,0,10"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entryText" HorizontalOptions="FillAndExpand" Placeholder="Enter the text here" />
            <Button x:Name="btnOK" Text="OK" FontFamily="Diablo" HorizontalOptions="FillAndExpand"
                    Clicked="btnOK_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>