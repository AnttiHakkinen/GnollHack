<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GnollHackClient.Pages.Game.NamePage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="What is your name?" FontFamily="Diablo" FontSize="Large" Margin="0,10,0,10"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="eName" HorizontalOptions="FillAndExpand" Placeholder="Enter your name here" />
            <Label Text="Name can contain only letters, numbers, and underscores.&#x0a;Its length must be 1–32 characters." FontSize="Small" FontAttributes="Italic"
                   HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="DarkGray" />

            <Label x:Name="lblError" HorizontalOptions="CenterAndExpand" Text="" />
            <Button x:Name="btnOK" Text="OK" FontFamily="Diablo" HorizontalOptions="FillAndExpand"
                    Clicked="btnOK_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>